{
  "name": "audio-recorder-polyfill",
  "version": "0.1.5",
  "description": "MediaRecorder polyfill to record audio in Edge and Safari",
  "keywords": [
    "mediarecorder",
    "polyfill",
    "edge",
    "safari",
    "wave",
    "wav",
    "webrtc",
    "audio",
    "web audio api",
    "recorder"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/audio-recorder-polyfill",
  "devDependencies": {
    "@logux/eslint-config": "^28.0.0",
    "clean-publish": "^1.1.2",
    "docdash": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.7.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^8.1.5",
    "nanodelay": "^0.1.4",
    "parcel-bundler": "^1.12.3",
    "posthtml": "^0.11.3",
    "pre-commit": "^1.2.2",
    "pug": "^2.0.3",
    "rimraf": "^2.6.3",
    "size-limit": "^1.0.0",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spell": "yaspeller-ci *.md test/demo/build/api/*.html",
    "clean": "rimraf coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "api": "jsdoc -d test/demo/build/api/ -t node_modules/docdash *.js",
    "unit": "jest --coverage",
    "test": "yarn unit && yarn lint && size-limit && yarn build && yarn spell",
    "start": "parcel serve -d ./test/demo/build ./test/demo/index.pug ./test/demo/polyfill.js --open",
    "build": "yarn clean && yarn api && NODE_ENV=production node ./test/demo/build.js"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "1.1 KB"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "globals": {
      "onmessage": true
    },
    "overrides": [
      {
        "files": [
          "test/**/*"
        ],
        "rules": {
          "es5/no-shorthand-properties": "off",
          "es5/no-arrow-functions": "off",
          "es5/no-destructuring": "off",
          "es5/no-block-scoping": "off",
          "es5/no-es6-methods": "off",
          "es5/no-classes": "off",
          "es5/no-spread": "off"
        }
      }
    ]
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "api/*.js.html"
    ],
    "dictionary": [
      "JSDoc",
      "docdash",
      "MediaRecorder",
      "Versioning",
      "polyfill",
      "js",
      "isTypeSupported",
      "mimeType",
      "MediaStream",
      "dataavailable",
      "addEventListener",
      "dispatchEvent",
      "removeEventListener",
      "timeslice",
      "notSupported",
      "requestData",
      "KB",
      "gzipped",
      "webpack",
      "Chua",
      "polyfillâ€™s",
      "polyfilled",
      "GMT",
      "Mon",
      "Tue",
      "Thu",
      "Fri",
      "Feb",
      "Harsha",
      "Gangisetty",
      "Shunsuke",
      "Mano"
    ]
  }
}
